@model BeautySalon.Models.EmployeePositionViewModel

@{
    ViewData["Title"] = "Сотрудники";
}

<h1>Сотрудники</h1>

<p>
    <a asp-action="Create">Добавить сотрудника</a>
</p>

<form asp-controller="Employees" asp-action="Index" method="get">

    <p>
        Должность: 
        <select asp-for="EmployeePosition" asp-items="Model.Positions" style="margin-right: 20px;">
            <option value="">Все</option>
        </select>

        ФИО сотрудника: <input type="text" name="SearchString" />

        <input type="submit" value="Отобрать" />
        <a style="margin-left:20px" asp-action="Index">Сбросить результаты поиска</a>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Position)
            </th>
            <th style="font-weight: 500; color: #777777;">Управление данными</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employees) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeID">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeID">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeID" class="delete-link">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
