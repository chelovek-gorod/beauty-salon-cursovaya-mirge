@model IEnumerable<BeautySalon.Models.Client>

@{
    ViewData["Title"] = "Клиенты";
}

<h1>Клиенты</h1>

<p>
    <a asp-action="Create">Добавить клиента</a>
</p>

<form asp-controller="Clients" asp-action="Index" method="get">
    <p>
        Поиск по номеру телефона: <input type="text" name="SearchString" />
        <input type="submit" value="Найти" />
        <a style="margin-left:20px" asp-action="Index">Сбросить результаты поиска</a>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th style="font-weight: 500; color: #777777;">Управление данными</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClientID">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.ClientID">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.ClientID" class="delete-link">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
